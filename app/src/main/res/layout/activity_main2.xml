<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main2Activity">

    <ScrollView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginTop="150dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/barbf1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.555"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="0dp"
                    android:background="#2F00D4AA"
                    android:text="Seja Bem-vindo! "
                    android:textAlignment="center"
                    android:textSize="24sp" />

            <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/comodidade"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="26dp"
                    android:text="Uma barbearia com um espaço acolhedor, extremamente organizada e formada por profissionais especializados. "
                    android:textAlignment="center"
                    android:textSize="18sp"
                    app:fontFamily="sans-serif-thin" />
            <HorizontalScrollView
                    android:id="@+id/horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/cafe">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:orientation="horizontal">

                    <ImageView
                            android:id="@+id/ambiente1"
                            android:layout_width="match_parent"
                            android:layout_height="246dp"
                            android:adjustViewBounds="true"
                            android:layout_marginEnd="20dp"
                            android:src="@color/colorPrimary"
                            android:layout_marginRight="20dp" />

                    <ImageView
                            android:id="@+id/ambiente2"
                            android:layout_width="match_parent"
                            android:layout_height="246dp"
                            android:src="@color/colorPrimary"
                            android:layout_marginEnd="20dp"
                            android:adjustViewBounds="true"
                            android:layout_marginRight="20dp" />
                    <ImageView
                            android:id="@+id/ambiente3"
                            android:layout_width="match_parent"
                            android:layout_height="246dp"
                            android:src="@color/colorPrimary"
                            android:adjustViewBounds="true"/>
                </LinearLayout>
            </HorizontalScrollView>
            <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:textSize="18sp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/conforto"
                    app:fontFamily="sans-serif-thin"
                    android:text=" ar condicionado; Internet Wi-fi , TV CABO. "
                    android:textAlignment="center"/>

            <Button
                    android:id="@+id/reservar"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_alignEnd="@+id/imageView"
                    android:layout_alignRight="@+id/imageView"
                    android:layout_alignBottom="@+id/imageView"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="104dp"
                    android:layout_marginLeft="104dp"
                    android:layout_marginEnd="107dp"
                    android:layout_marginRight="107dp"
                    android:layout_marginBottom="59dp"
                    android:alpha=".9"
                    android:background="#fff2"
                    android:text="Solicitar Reserva" />

            <HorizontalScrollView
                    android:id="@+id/horizontalScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_below="@id/galeria"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginLeft="8dp"
                        android:orientation="horizontal">
                    <ImageView
                            android:id="@+id/galeria1"
                            android:layout_width="match_parent"
                            android:layout_height="240dp"
                            android:src="@color/colorPrimary"
                            android:layout_marginEnd="10dp"
                            android:adjustViewBounds="true"
                            tools:ignore="NotSibling"
                            android:layout_marginRight="10dp" />
                    <ImageView
                            android:id="@+id/galeria2"
                            android:layout_width="match_parent"
                            android:layout_height="240dp"
                            android:layout_marginEnd="10dp"
                            android:src="@color/colorPrimary"
                            android:adjustViewBounds="true"
                            tools:ignore="NotSibling"
                            android:layout_marginRight="20dp" />
                    <ImageView
                            android:id="@+id/galeria3"
                            android:layout_width="match_parent"
                            android:layout_marginEnd="10dp"
                            android:layout_height="240dp"
                            android:src="@color/colorPrimary"
                            android:adjustViewBounds="true"
                            tools:ignore="NotSibling"
                            android:layout_marginRight="20dp" />
                    <ImageView
                            android:id="@+id/galeria4"
                            android:layout_width="match_parent"
                            android:layout_height="240dp"
                            android:src="@color/colorPrimary"
                            android:layout_marginEnd="10dp"
                            android:adjustViewBounds="true"
                            tools:ignore="NotSibling"
                            android:layout_marginRight="20dp" />
                    <ImageView
                            android:id="@+id/galeria5"
                            android:layout_width="match_parent"
                            android:layout_marginEnd="10dp"
                            android:layout_height="240dp"
                            android:src="@color/colorPrimary"
                            android:adjustViewBounds="true"
                            tools:ignore="NotSibling"
                            android:layout_marginRight="20dp" />
                    <ImageView
                            android:id="@+id/galeria6"
                            android:layout_width="match_parent"
                            android:layout_height="240dp"
                            android:src="@color/colorPrimary"
                            android:layout_marginEnd="10dp"
                            android:adjustViewBounds="true"
                            tools:ignore="NotSibling"
                            android:layout_marginRight="20dp" />
                    <ImageView
                            android:id="@+id/galeria7"
                            android:layout_width="match_parent"
                            android:layout_height="240dp"
                            android:src="@color/colorPrimary"
                            android:layout_marginEnd="10dp"
                            android:adjustViewBounds="true"
                            tools:ignore="NotSibling"
                            android:layout_marginRight="10dp" />
                    <ImageView
                            android:id="@+id/galeria8"
                            android:layout_width="match_parent"
                            android:layout_height="240dp"
                            android:layout_marginEnd="10dp"
                            android:src="@color/colorPrimary"
                            android:adjustViewBounds="true"
                            tools:ignore="NotSibling"
                            android:layout_marginRight="20dp" />
                    <ImageView
                            android:id="@+id/galeria9"
                            android:layout_width="match_parent"
                            android:layout_marginEnd="10dp"
                            android:layout_height="240dp"
                            android:src="@color/colorPrimary"
                            android:adjustViewBounds="true"
                            tools:ignore="NotSibling"
                            android:layout_marginRight="20dp" />
                    <ImageView
                            android:id="@+id/galeria10"
                            android:layout_width="match_parent"
                            android:layout_height="240dp"
                            android:src="@color/colorPrimary"
                            android:layout_marginEnd="10dp"
                            android:adjustViewBounds="true"
                            tools:ignore="NotSibling"
                            android:layout_marginRight="20dp" />
                </LinearLayout>
            </HorizontalScrollView>
            <Button
                    android:id="@+id/faceb"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/horizontalScrollView"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/faceb"
                    android:textSize="10sp" />
            <Button
                    android:id="@+id/instagram"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/horizontalScrollView"
                    android:layout_marginStart="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_toLeftOf="@+id/face"
                    android:layout_toRightOf="@+id/faceb"
                    android:background="@drawable/insta"
                    android:textSize="10sp"
                    tools:ignore="UnknownId" />
            <Button
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@id/instagram"
                    android:layout_marginTop="20dp"
                    android:text="Mapa\n Av. José Acácio Moreira, 1663\nCentro - Tubarão/SC.\nCEP: 88.704-557"
                    android:textAlignment="center"
                    android:drawableLeft="@drawable/ic_local"
                    android:textSize="10sp" />
            <Button
                    android:id="@+id/contato"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView8"
                    android:textAlignment="center"
                    android:drawableLeft="@drawable/ic_telefone"
                    android:textSize="10dp"
                    android:text="(48) 3437-4221\nE-mail= contato@hotmail.com"/>

            <ImageView
                    android:id="@+id/logo2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/textView2"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/logo1" />

            <TextView
                    android:id="@+id/comodidade"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_below="@+id/imageView"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:text="COMODIDADE"
                    android:textColor="#BCEE68"
                    android:textSize="24dp"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/conforto"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_below="@+id/horizontal"
                    android:layout_marginTop="12dp"
                    android:textSize="24dp"
                    android:gravity="center"
                    android:text="CONFORTO"
                    android:textColor="#BCEE68"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/galeria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView6"
                    android:layout_marginTop="2dp"
                    android:text="GALERIA"
                    android:textSize="24dp"
                    android:drawableRight="@color/colorPrimary"
                    android:background="#2F00D4AA"/>
            <TextView
                    android:id="@+id/cafe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView5"
                    android:layout_marginTop="2dp"
                    android:textSize="24dp"
                    android:drawableRight="@color/colorPrimary"
                    android:background="#2F00D4AA"/>


        </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>