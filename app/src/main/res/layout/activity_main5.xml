<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/barber3"
        tools:context=".Main5Activity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

    <Button
            android:text="Adicionar Lembrete"
            android:background="@drawable/botao"
            android:layout_width="180dp"
            android:layout_height="40dp" android:id="@+id/agendar"
            android:layout_marginTop="100dp"
            android:layout_below="@+id/txt"
            android:layout_centerHorizontal="true"/>

    <Button
            android:id="@+id/sair"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@+id/agendar"
            android:layout_marginTop="30dp"
            android:background="@drawable/botao"
            android:layout_centerHorizontal="true"
            android:text="SAIR" />

    <TextView
            android:text="TextView"
            android:textColor="#7cfc00"
            android:gravity = "center"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txt"
            android:layout_marginTop="79dp" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginLeft="0dp" android:layout_marginStart="0dp" android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true" android:layout_marginRight="0dp"
            android:layout_marginEnd="0dp"/>

            <Button
                    android:id="@+id/faceb"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/sair"
                    android:layout_alignStart="@+id/sair"
                    android:layout_alignLeft="@+id/sair"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/faceb"
                    android:textSize="10sp" />

            <Button
                    android:id="@+id/instagram"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/sair"
                    android:layout_alignEnd="@+id/sair"
                    android:layout_alignRight="@+id/sair"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:background="@drawable/insta"
                    android:textSize="10sp"
                    tools:ignore="UnknownId" />

            <Button
            android:id="@+id/endereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_below="@id/sair"
            android:layout_marginTop="150dp"
            android:drawableLeft="@drawable/ic_local"
            android:text="Mapa\n Av. José Acácio Moreira, 1663\nCentro - Tubarão/SC.\nCEP: 88.704-557"
            android:textAlignment="center"
            android:textSize="10sp" />

            <Button
                    android:id="@+id/contato"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/endereco"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="1dp"
                    android:drawableLeft="@drawable/ic_telefone"
                    android:text="(48) 3437-4221\nE-mail= contato@hotmail.com"
                    android:textAlignment="center"
                    android:textSize="10dp" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>